@using Goblin.Domain
@{
    ViewData["Title"] = "Отправка сообщений";
}

<h2>@ViewData["Title"]</h2>
<hr/>

<div class="row">
    <div class="col-md-3">
        <form method="post" asp-area="Admin" asp-controller="Messages" asp-action="SendToAll">
            <h3>Рассылка всем</h3>
            <div class="form-group">
                <label>Куда отправлять</label>
                <select class="form-control custom-select" name="type" required="">
                    <option disabled="" selected="">...</option>
                    <option value="@((int) ConsumerType.Vkontakte)">@ConsumerType.Vkontakte</option>
                    <option value="@((int) ConsumerType.Telegram)">@ConsumerType.Telegram</option>
                    <option value="@((int) ConsumerType.AllInOne)">Отправить всем-всем-всем</option>
                </select>
            </div>
            <div class="form-group">
                <label>Сообщение</label>
                <textarea class="form-control message-all" name="msg" placeholder="Сообщение" required=""></textarea>
            </div>
            <div class="btn-group">
                <div class="btn-toolbar" role="toolbar">
                    <div class="btn-group mr-2">
                        <button id="add-attach-all" type="button" class="btn btn-info">Добавить аттач</button>
                    </div>
                    <div class="btn-group mr-2">
                        <button type="submit" class="btn btn-warning">Отправить</button>
                    </div>
                </div>
            </div>
            <div class="form-group attachments-all">
                <label>Прикрепления</label>
                <div class="input-group mb-3">
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-3 offset-md-2">
        <form method="post" asp-area="Admin" asp-controller="Messages" asp-action="SendToId">
            <h3>Письмо одному</h3>
            <div class="form-group">
                <label>Куда отправлять</label>
                <select class="form-control custom-select" name="type" required="">
                    <option disabled="" selected="">...</option>
                    <option value="@((int) ConsumerType.Vkontakte)">@ConsumerType.Vkontakte</option>
                    <option value="@((int) ConsumerType.Telegram)">@ConsumerType.Telegram</option>
                </select>
            </div>
            <div class="form-group">
                <label>ID (2000000001 для бесед)</label>
                <input type="number" class="form-control user-id" name="peerId" placeholder="ID" required="">
            </div>
            <div class="form-group">
                <label>Сообщение</label>
                <textarea class="form-control message-one" name="msg" placeholder="Сообщение" required=""></textarea>
            </div>
            <div class="btn-group">
                <div class="btn-toolbar" role="toolbar">
                    <div class="btn-group mr-2">
                        <button id="add-attach-one" type="button" class="btn btn-info">Добавить аттач</button>
                    </div>
                    <div class="btn-group mr-2">
                        <button type="submit" class="btn btn-warning">Отправить</button>
                    </div>
                </div>
            </div>
            <div class="form-group attachments-one">
                <label>Прикрепления</label>
                <div class="input-group mb-3">
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script src="~/js/site.js"></script>
}