@using Goblin.Narfu
@model Goblin.Domain.Entities.BotUser[];
@inject NarfuApi NarfuApi;

@{
    ViewData["Title"] = "Список пользователей";
}

<h2>
    @ViewData["Title"] <span class="badge badge-secondary">@Model.Length</span>
</h2>
<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Vk ID</th>
        <th>Admin?</th>
        <th>Group</th>
        <th>Schedule?</th>
        <th>Weather?</th>
        <th>City</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var user in Model)
    {
        var url = $"https://vk.com/id{user.VkId}";
        var gr = NarfuApi.Students.GetGroupByRealId(user.NarfuGroup);
        var group = gr?.SiteId ?? 0;
        var groupName = gr is null ? "" : gr.Name;
        <tr>
            <td>
                <a href="@url" target="_blank">@user.VkId</a>
            </td>
            <td>@user.IsAdmin</td>
            <td>
                @if(group != 0)
                {
                    <a href="https://ruz.narfu.ru/?timetable&group=@group" target="_blank">@user.NarfuGroup</a>
                    <p>@groupName</p>
                }
                else
                {
                    <p>Группа не установлена</p>
                }
            </td>
            <td>@user.SubscribeInfo.IsSchedule</td>
            <td>@user.SubscribeInfo.IsWeather</td>
            <td>@user.WeatherCity</td>
        </tr>
    }
    </tbody>
</table>