@model Goblin.Narfu.Models.Lesson;
@{
    string GetCssStyle()
    {
        const string transparent = "transparent d-none d-sm-block";
        var type = Model.Type;
        if(string.IsNullOrWhiteSpace(type))
        {
            return transparent;
        }

        if(type.Equals("лекции", StringComparison.CurrentCultureIgnoreCase))
        {
            return "green";
        }
        if(type.Equals("лабораторные занятия", StringComparison.CurrentCultureIgnoreCase))
        {
            return "blue";
        }
        if(type.Equals("практические занятия", StringComparison.CurrentCultureIgnoreCase))
        {
            return "yellow";
        }
        if(type.Equals("консультация", StringComparison.CurrentCultureIgnoreCase))
        {
            return "orange";
        }
        if(Model.IsExam())
        {
            return "red";
        }

        return transparent;
    }

}

<div class="timetable_sheet @GetCssStyle()">
    <span class="num_para">
        @Model.Number
    </span>
    @if(!string.IsNullOrEmpty(Model.Type))
    {
        <span class='time_para'>
            @Model.StartEndTime
        </span>
        <span class='kindOfWork'>
            @Model.Type
        </span>
        <span class='discipline'>
            @Model.Name (@Model.Teacher)
        </span>
        <span class='group'>
            @Model.Groups
        </span>
        <span class='auditorium'>
            <b>ауд. @Model.Auditory</b> @Model.Address
        </span>
    }
</div>