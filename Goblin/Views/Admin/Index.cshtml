@using Goblin.Helpers;
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap-dark.min.css" type="text/css" media="all">
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <br />
        <div class="col-md-3">
            <h2>Welcome</h2>
            <ul class="nav nav-pills nav-stacked">
                <li class="active"><a data-toggle="tab" href="#home">Главная</a></li>
                <li><a data-toggle="tab" href="#msgs">Cообщения</a></li>
                <li><a href='@Url.Action("Logout", "Admin")'>Выход</a></li>
            </ul>
        </div>

        <div class="tab-content col-md-offset-3">
            <div id="home" class="tab-pane fade in active">
                <h3>Главная</h3>
                <div class="panel panel-default">
                    <div class="panel-heading">Cписок пользователей <span class="badge">@ViewBag.Users.Count</span></div>

                    <table class="table table-striped table-hover ">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Vk Id</th>
                                <th>Group Id</th>
                                <th>Is schedule</th>
                                <th>Is weather</th>
                                <th>City</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in ViewBag.Users)
                            {
                                var url = $"https://vk.com/id{user.Vk}";
                                var gr = ScheduleHelper.GetGroupByRealId(user.Group);
                                var group = gr?.SiteId ?? 0;
                                <tr>
                                    <td>@user.ID</td>
                                    <td><a href="@url" target="_blank">@user.Vk</a></td>
                                    <td><a href="https://ruz.narfu.ru/?timetable&group=@group" target="_blank">@user.Group</a></td>
                                    <td>@user.Schedule</td>
                                    <td>@user.Weather</td>
                                    <td>@user.City</td>
                                </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
            <div id="msgs" class="tab-pane fade">
                <div class="col-lg-6">
                    <div class="input-group">
                        <span class="input-group-btn">
                            <button class="btn btn-info send_message" type="button">Отправить</button>
                        </span>
                        <textarea class="form-control message" placeholder="Сообщение" rows="1"></textarea>
                    </div><!-- /input-group -->
                </div><!-- /.col-lg-6 -->
            </div>
        </div>
    </div>
    <script src="~/js/site.min.js"></script>
</body>