@using Goblin.Schedule
@model List<Goblin.Models.User>
<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Goblin</title>
    <link href="~/styles/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <h1>Японский гоблин</h1>
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab">Главная</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-messages-tab" data-toggle="pill" href="#pills-messages" role="tab">Сообщения</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href='@Url.Action("Logout", "Admin")'>Выход</a>
            </li>
        </ul>

        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-home" role="tabpanel">
                <h2>Список пользователей <span class="badge badge-secondary">51</span></h2>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Vk ID</th>
                            <th>Group</th>
                            <th>Schedule?</th>
                            <th>Weather?</th>
                            <th>City</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            var url = $"https://vk.com/id{user.Vk}";
                            var gr = StudentsSchedule.GetGroupByRealId(user.Group);
                            var group = gr?.SiteId ?? 0;
                            var grName = gr is null ? "" : gr.Name;
                            <tr>
                                <td>@user.ID</td>
                                <td>
                                    <a href="@url" target="_blank">@user.Vk</a>
                                </td>
                                <td>
                                    <a href="https://ruz.narfu.ru/?timetable&group=@group" target="_blank">@user.Group</a>
                                    <p>@grName</p>
                                </td>
                                <td>@user.Schedule</td>
                                <td>@user.Weather</td>
                                <td>@user.City</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="tab-pane fade" id="pills-messages" role="tabpanel">
                <div class="row">
                    <div class="col-md-3">
                        <h3>Рассылка всем</h3>
                        <div class="form-group">
                            <label>Сообщение</label>
                            <textarea class="form-control message-all" placeholder="Сообщение"></textarea>
                        </div>
                        <div class="btn-group">
                            <div class="btn-toolbar" role="toolbar">
                                <div class="btn-group mr-2">
                                    <button id="add-attach-all" type="button" class="btn btn-info">Добавить аттач</button>
                                </div>
                                <div class="btn-group mr-2">
                                    <button type="button" class="btn btn-warning send-message-all">Отправить</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group attachments-all">
                            <label>Прикрепления</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">1</span>
                                </div>
                                <input type="text" class="form-control attach-all" placholder="attach">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <h3>Письмо одному</h3>
                        <div class="form-group">
                            <label>ID (2000000001 для бесед)</label>
                            <input type="number" class="form-control user-id" placeholder="ID">
                        </div>
                        <div class="form-group">
                            <label>Сообщение</label>
                            <textarea class="form-control message-one" placeholder="Сообщение"></textarea>
                        </div>
                        <div class="btn-group">
                            <div class="btn-toolbar" role="toolbar">
                                <div class="btn-group mr-2">
                                    <button id="add-attach-one" type="button" class="btn btn-info">Добавить аттач</button>
                                </div>
                                <div class="btn-group mr-2">
                                    <button type="button" class="btn btn-warning send-message-one">Отправить</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group attachments-one">
                            <label>Прикрепления</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">1</span>
                                </div>
                                <input type="text" class="form-control attach-one" id="attach" placholder="attach">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="js/jquery-3.1.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.min.js"></script>
</body>
</html>
